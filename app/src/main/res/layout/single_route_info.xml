<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        android:layout_margin="@dimen/_2sdp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/route_card_layout"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_background"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/route_layout_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_imageview"
                android:layout_marginTop="@dimen/margin_card">
                <TextView
                    android:id="@+id/route_name_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="ROUTE name"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryText" />

            </RelativeLayout>


            <TextView
                android:id="@+id/route_content_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/route_layout_card"
                android:layout_marginRight="@dimen/margin_imageview"
                android:layout_margin="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="stop point1"
                android:textSize="15sp" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/route_content_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/route_layout_card"
                android:layout_marginRight="@dimen/margin_imageview"
                android:layout_margin="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="stop point2"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>